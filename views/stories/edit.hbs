  <h4>Edit Stories</h4>
 <div class="row">
    <form class="col s12" action="/stories/{{story._id}}" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <div class="row">
        <div class="input-field">
          <input  type="text"  id="title" name="title" value="{{story.title}}">
          <label for="title">Title</label>
        </div>

        <div class="input-field">
         <select id="status" name="status">
            {{#select story.status}}
             <option value="public">Public</option>
             <option value="privated">Private</option>
            {{/select}} 
         </select>
         <label for="status">Status</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field">
         <h5>Tell us your stories</h5>
         <textarea  id="body" name="body">{{story.body}}</textarea>
        </div>
      </div>
      <div class="row">
        <div class="input-field">
         <input type="submit" value="Save" class="btn">
         <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
      </div>
    </form>
  </div>