
<h3>Welcome {{name}}</h3>
<p>Here are your stories..</p>
 {{!-- createdDate --}}

{{#if stories}}
   <table class="striped">
       <thead>
           <tr>
               <th>Title</th>
               <th>Date</th>
               <th>Status</th>
               <th>Actions</th>
           </tr>
       </thead>
       <tbody>
           {{#each stories}}
             <tr>
                <td><a href="/stories/{{_id}}">{{title}}</a></td>
                <td>{{formatDate createdDate 'MMMM Do YYYY, h:mm:ss a'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td>
                    <a href="/stories/edit/{{_id}}" class="btn btn-float">
                       <i class="fas fa-edit myedit"></i>
                   </a> 
                   
                   </td>
                 <td> <form  action="/stories/{{_id}}" method="POST" id="delete-form">
                     <input type="hidden" name="_method" value="DELETE">
                     <button type="submit" class="btn red">
                         <i class="fas fa-trash mytrash"></i>
                     </button>
                     </form></td>

              </tr>
           {{/each}}
       </tbody>

   </table>
{{else}}
<p>You don't have any stories create now..</p>
 
{{/if}}